<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title>sign-up</title>
  </head>
  <body>
    <div class="index-container">
      <div class="header">
        <div class="header1">
          <h3>Members only</h3>
          <h3><a href="/">Home</a></h3>
        </div>
        <div class="header2">
          <h3><a href="/log-in">Login</a></h3>
          <h3><a href="/sign-up">Register</a></h3>
        </div>
      </div>
      <div class="sign-up-container">
        <div class="sign-up-contents">
          <div
            style="
              display: flex;
              justify-content: flex-end;
              font-size: 48px;
              margin: 10px;
            "
          >
            Sign-up
          </div>
          <ul>
            <% if(errors.length > 0) { %> <% errors.forEach(error => { %>
            <li><%= error.message %></li>
            <% }) %> <% } %>
          </ul>
          <div>
            <form action="/sign-up" method="post">
              <div class="form-div">
                <label for="firstname">Firstname:</label>
                <input
                  type="text"
                  id="firstname"
                  name="firstname"
                  placeholder="firstname"
                  required
                />
              </div>
              <div class="form-div">
                <label for="lastname">Lastname:</label>
                <input
                  type="text"
                  id="lastname"
                  name="lastname"
                  placeholder="lastname"
                  required
                />
              </div>
              <div class="form-div">
                <label for="email">Email:</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="email"
                />
              </div>
              <div class="form-div">
                <label for="password">Paswword:</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="password"
                  required
                />
              </div>
              <div class="form-div">
                <label for="confirm-password">Confirm-password:</label>
                <input
                  type="password"
                  id="confirm-password"
                  name="confirm_password"
                  required
                />
              </div>
              <div class="sign-up-btn">
                <button type="submit">sign-up</button>
                <a href="/log-in">Login</a>
              </div>
            </form>
          </div>
          <div></div>
        </div>
      </div>
      <div class="index-footer">
        <a href="https://github.com/Rarejam/">GitHub</a>
      </div>
    </div>
  </body>
</html>
